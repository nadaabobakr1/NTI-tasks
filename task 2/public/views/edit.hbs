<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

<div class="container">

{{#unless user}}
    <div class="alert alert-danger">
        user not found
    </div>
{{else}}
    <form method="post">

    <div class="mb-2 mt-4">
        <label for="title">Title</label>
        <input type="text" placeholder="enter title" name="title" class="form-control" required value="{{user.title}}">
    </div>

        <div class="mb-2">
        <label for="description">Description</label>
        <input type="text" placeholder="enter description" name="description" class="form-control" required value="{{user.description}}">
    </div>

    <div>
        <a href="/" class="btn btn-secondary">Cancel</a>
        <button  class="btn btn-primary">Save</button>
    </div>

</form>
   {{/unless}}
</div>