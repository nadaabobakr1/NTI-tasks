{{#unless user}}

<div class="alert alert-danger">
    user not found
</div>
{{else}}

<div class="container">
    

<div class="card mt-4">


            <div class="card-body">
                
                <h4 class="card-title">{{user.title}}</h4>

                 <div class="card-text mb-2">{{user.description}}</div>
                 <a href="/" class="btn btn-primary">BACK</a>
             
            </div> 

</div>



</div>
{{/unless}}

{{#if user.comments}}

 <div class="container my-2">
<h1>Comments</h1>
    {{#each user.comments}}
        
         <div class="card mt-4">


            <div class="card-body border border-info rounded">
                
                <h4 class="card-title">{{this.name}}</h4>

                 <div class="card-text mb-2 ">{{this.comment}}</div>
                 {{!-- <a href="/" class="btn btn-primary">BACK</a> --}}
             
            </div> 

        </div>

      



     {{/each}}
 </div>    

{{/if}}
