<body>
    <div class="container">
        <h3 class="mt-2">New Article</h3>

<form method="post">

    <div class="mb-2 mt-4">
        <label for="title">Title</label>
        <input type="text" placeholder="enter title" name="title" class="form-control" required value="{{data.title}}">
    </div>

        <div class="mb-2">
        <label for="description">Description</label>
        <textarea type="text" placeholder="enter description" name="description" class="form-control" required value="{{data.description}}"></textarea>
    </div>

    <div>
        <a href="/" class="btn btn-secondary">Cancel</a>
        <button  class="btn btn-primary">Save</button>
    </div>

</form>


     </div>
</body>
</html>